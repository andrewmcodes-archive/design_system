<%= table do %>
  <%= table_head do %>
    <%= table_row header: true do %>
      <%= table_column {"Job"} %>
      <%= table_column {"City"} %>
      <%= table_column {"State"} %>
      <%= table_column(add_class: "text-right") {"Salary"} %>
    <% end %>
  <% end %>
  <%= table_body do %>
    <% 9.times do %>
      <%= table_row do %>
        <%= table_data_value Faker::Job.title %>
        <%= table_data_value Faker::Address.city %>
        <%= table_data_value Faker::Address.state_abbr %>
        <%= table_data_value number_to_currency(Faker::Commerce.price), add_class: "text-right" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
